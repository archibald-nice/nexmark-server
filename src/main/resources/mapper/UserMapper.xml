<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.workmagic.demo.nexmarkserver.mapper.UserMapper">

    <select id="selectByUsername" resultType="com.workmagic.demo.nexmarkserver.entity.User">
        SELECT * FROM sys_user WHERE username = #{username} AND deleted = 0
    </select>

    <select id="selectByEmail" resultType="com.workmagic.demo.nexmarkserver.entity.User">
        SELECT * FROM sys_user WHERE email = #{email} AND deleted = 0
    </select>

    <select id="selectByPhone" resultType="com.workmagic.demo.nexmarkserver.entity.User">
        SELECT * FROM sys_user WHERE phone = #{phone} AND deleted = 0
    </select>

</mapper>